<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="module-a.list">
      <field name="name">module-a list</field>
      <field name="model">module_a.module_a_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="orders_gallery_view">
      <field name="name">awesome_tshirt.orders.gallery</field>
      <field name="model">module_a.module_a_model</field>
      <field name="arch" type="xml">
        <gallery image_field="image_url"/>
      </field>
    </record>

    <!-- actions opening views on models -->
