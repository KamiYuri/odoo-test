<!--    </record>-->

    <record model="ir.actions.act_window" id="module-a.action_window_gallery">
      <field name="name">module-a window</field>
      <field name="res_model">module_a.module_a_model</field>
      <field name="view_mode">gallery</field>
      <field name="view_id" ref="module-a.orders_gallery_view"></field>
    </record>

